<xmlBlaster>

  <connect>
    <qos>
      <securityService type="htpasswd" version="1.0"><![CDATA[
        <user>TestPersistentSession</user>
        <passwd>secret</passwd>
      ]]></securityService>
      <persistent/>
      <session name='yourName/6' />
      <queue relating='connection'><address pingInterval='0' retries='-1' delay='2000' /></queue>
      <queue relating='callback' maxEntries='5' maxEntriesCache='2'><callback pingInterval='0' retries='-1' delay='1000' /></queue>
   </qos>
  </connect>

  <wait delay="1000" />
<!--
  <disconnect /> 
-->
</xmlBlaster>

