#!/bin/sh
#
# Starting the DomQueryTest 
#
TESTUITE_DATA=$XMLBLASTER_HOME/testsuite/data/xml
TEST_PROG=testsuite.org.xmlBlaster.query.DomQueryTest

okh="\033[32;40m"
okt="\033[0m"


next_test()
{
testname = $1
 while [ 1 ]; do
    echo -e "Press a ${okh}Enter${okt} to continue you test $1 ....."
    read INPUT
    if [ "$INPUT" = n -o "$INPUT" = N  -o  -z "$INPUT" ]; then
      break
    fi
    continue
  done
}



next_test  "Agent.xml........ xmlBlaster/key[@oid='2'"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     xmlBlaster/key[@oid='2']

next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     xmlBlaster/key/AGENT/DRIVER[@id=\"FileProof\"]
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     xmlBlaster/key/AGENT[@id=\"192.168.124.10\"]
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     xmlBlaster/key/AGENT[attribute::type]
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     "xmlBlaster/key[position()=last()-1]"
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     xmlBlaster/key[6] 
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     "//DRIVER[@id='FileProof']" 
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     "//descendant::AGENT/child::DRIVER"
next_test  "Agent.xml........"
next_test  "Agent.xml........"
java $TEST_PROG $TESTUITE_DATA/Agent.xml     "//DRIVER[EXECUTABLE='import' or EXECUTABLE='export']"


