<!ELEMENT requirement (
	topic,
	description,
	example*,
	see*,
	author,
	date,
	revision,
	testcase*
	)>

<!ENTITY % text "#PCDATA">

<!ELEMENT topic  (%text;)>
<!ELEMENT description  (%text;)> 
<!ELEMENT example  (%text;)> 
<!ELEMENT see  (%text;)> 
<!ELEMENT author  (%text;)> 
<!ELEMENT date  (%text;)> 
<!ELEMENT revision  (%text;)> 

<!ELEMENT testcase (
	name,
	comment,
	test
	)>

<!ELEMENT name  (%text;)> 
<!ELEMENT comment  (%text;)> 
<!ELEMENT test  (%text;)> 

<!ATTLIST requirement
          id ID #REQUIRED
			 prio  (LOW | MEDIUM | HIGH) "LOW"
          type (NEW | BUG | CHANGE_REQUEST) "BUG"
			 status (OPEN | INWORK | CLOSED) "OPEN">  

<!ATTLIST example lang (Java | C | CPP | Perl | Python | TCL | Javascript) "Java">  

<!--
   The type API allows the XSL to create a link into the xmlBlaster javadoc
   the type REQ creates a link to another requirement file
	Example: (don't give any extensions)
   <see type="API">org.xmlBlaster.client.PublishQosWrapper</see>
 -->
<!ATTLIST see type (API | REQ | OTHER) "API">

<!ATTLIST testcase status (OPEN | CLOSED) "OPEN">  

<!-- The type SUITE allows the XSL to create a link into the xmlBlaster testsuite -->
<!ATTLIST test tool (SUITE | MANUAL) "SUITE">  
