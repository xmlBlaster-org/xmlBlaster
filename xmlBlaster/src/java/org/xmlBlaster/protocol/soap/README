SOAP support is under construction 2002-08-23 marcel



1. Math example
================

javac -g -sourcepath src -d classes src/examples/MathService.java

jar -cvf mathService.sar classes service.xml

export SAW_HOME=$HOME/saw_0.995

export CLASSPATH=$SAW_HOME/lib/saw.jar:$SAW_HOME/lib/log4j.jar:$SAW_HOME/lib/log4j-core.jar
export CLASSPATH=$CLASSPATH:$SAW_HOME/lib/jdom.jar:$SAW_HOME/lib/xerces.jar
export CLASSPATH=$CLASSPATH:classes

javac -g -sourcepath src -d classes src/examples/MathClient.java

java examples.MathClient



1. Authenticate example
========================

javac -g -sourcepath src -d classes AuthenticateImpl.java

jar -cvf xmlBlaster.sar classes service.xml

export SAW_HOME=$HOME/saw_0.995

export CLASSP=$SAW_HOME/lib/saw.jar:$SAW_HOME/lib/log4j.jar:$SAW_HOME/lib/log4j-core.jar
export CLASSP=$CLASSP:$SAW_HOME/lib/jdom.jar:$SAW_HOME/lib/xerces.jar
export CLASSP=$CLASSP:classes
#export CLASSP=$CLASSP:/home/xmlblast/xmlBlaster/lib/xmlBlaster.jar

export CLASSP=$CLASSP:/home/xmlblast/xmlBlaster/lib/saw.jar:/home/xmlblast/xmlBlaster/lib/log4j-core.jar:/home/xmlblast/xmlBlaster/lib/log4j.jar


export CLASSPATH=$CLASSP:$CLASSPATH

javac -g -sourcepath src -d classes src/examples/MathClient.java

java examples.MathClient





java  -Djafw.saw.server.config=/home/xmlblast/xmlBlaster/config/config.xml -Dsaw.home=/home/xmlblast/saw_0.995 org.xmlBlaster.Main -trace true

